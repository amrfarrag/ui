
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<div ng-controller="projectcontroller">
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2">اسم المشروع :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="projectname" ng-model="project.ProjectName" />
            </div>
        </div>
    </form>
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2">:كود الموظف</label>
                <div class="col-sm-10">
                    <input id="autocode" type="text" class="form-control" ng-model="employer.EmployerCode" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">:اسم الموظف</label>
                <div class="col-sm-10">
                    <input id="autoname" type="text" class="form-control" ng-model="employer.EmployerName"/>
                </div>

            </div>

            <button class="btn btn-primary col-sm-offset-5 col-sm-2" ng-click="hire()">
                Save
            </button>
        </form>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>كود الموظف</th>
                <th>اسم الموظف</th>
            </tr>
        </thead>
        <tr ng-repeat="emp in project.Employers">
            <th>{{$index+1}}</th>
            <td>{{emp.EmployerCode}}</td>
            <td>{{emp.EmployerName}}</td>
        </tr>
    </table>
</div>
